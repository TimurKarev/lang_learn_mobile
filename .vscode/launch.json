    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dev (Local)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": [
                "--dart-define=FLAVOR=dev",
                "--dart-define=LOCAL_SUPABASE=true",
                "--web-port=3000",
                "--web-hostname=127.0.0.1"
            ]
        },
        {
            "name": "Dev (Remote)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": [
                "--dart-define=FLAVOR=dev",
                "--dart-define=LOCAL_SUPABASE=false",
                "--web-port=3000"
            ]
        },
        {
            "name": "Prod",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--dart-define=FLAVOR=prod",
                "--dart-define=LOCAL_SUPABASE=false"
            ]
        }
    ]
}